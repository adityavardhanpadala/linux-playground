{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/scripts/build-k.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, 
        {
            "label": "build-fs",
            "type": "shell",
            "command": "/scripts/build-fs.sh",
            "problemMatcher": [],
            "group": "build",
        }, 
        { 
            "label": "(normal) Start Kernel in QEMU",
            "type": "process",
            "command": "qemu-system-x86_64",
            "problemMatcher": [],
            "args": [
                "-smp",
                "4",
                "-kernel",
                "/sources/linux/arch/x86_64/boot/bzImage",
                "-append",
                "\"console=ttyS0 nokaslr\"",
                "-initrd",
                "/staging/initramfs-busybox-x86.cpio.gz",
                "-nographic"
            ],
            "presentation": {
                "reveal": "always",
                "focus" : true,
                "panel": "dedicated",
            }
        },  
        { 
            "label": "(debug) Start Kernel in QEMU",
            "type": "process",
            "command": "qemu-system-x86_64",
            "problemMatcher": [],
            "args": [
                "-s",
                "-S",
                "-smp",
                "4",
                "-kernel",
                "/sources/linux/arch/x86_64/boot/bzImage",
                "-append",
                "\"console=ttyS0 nokaslr\"",
                "-initrd",
                "/staging/initramfs-busybox-x86.cpio.gz",
                "-nographic"
            ],
            "presentation": {
                "reveal": "always",
                "focus" : true,
                "panel": "dedicated",
            }
        },
        {
            "label": "(debug) Start GDB",
            "type": "shell",
            "command": "gdb", 
            "problemMatcher": [],
            "args": [
                "/sources/linux/vmlinux",
            ],
            "presentation": {
                "reveal": "always",
                "focus" : true,
                "panel": "dedicated",
            }

        },
        {
            "label": "(Advanced) Use vscode to debug",
            "type": "shell",
            "command": "cp", 
            "problemMatcher": [],
            "args": [
                "/sources/.gdbinit_vscode",
                "/root/.gdbinit"
            ],
            "presentation": {
                "focus" : false,
            }

        },
        {
            "label": "(Advanced) Use gef to debug",
            "type": "shell",
            "command": "cp", 
            "problemMatcher": [],
            "args": [
                "/sources/.gdbinit_gef",
                "/root/.gdbinit"
            ],
            "presentation": {
                "focus" : false,
            }

        },
        {
            "label": "(Advanced) Generate compile_commands.json",
            "type": "process",
            "command": "python",
            "args": [
                "${workspaceRoot}/.vscode/generate_compdb.py"
            ],
            "problemMatcher": []
        }
    ]
}